from django.urls import  include, re_path, path

from . import views
from django.contrib.auth import views as auth_views
app_name = 'login'

urlpatterns = [
	path('accounts/password_reset/',auth_views.PasswordResetView.as_view(template_name='password_change.html'),name='password_reset'),
    path('accounts/change-password/', auth_views.PasswordChangeView.as_view(template_name='password_change.html')),
    re_path('login/', include([
        re_path(r'^login_modal$', views.login_modal),
        re_path(r'^login_redirect$', views.login_redirect, name='login_redirect'),
        re_path(r'^login$', views.login_authentication),
        re_path(r'^logout$', views.logout_authentication),

    ])),
    
]

